<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KChingariActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_common"
            android:layout_height="0dp"
            android:layout_weight="0.45"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/back" />


            <LinearLayout
                android:id="@+id/kChingBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnLay"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center|bottom">

                <ImageView
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/ic_sub_icon_bg"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/kchingari" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chingari"
                    android:textColor="@color/download_btn_text_color"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_15sdp"
                android:background="@drawable/sub_tab_bg"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_13sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/linkEdt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_37sdp"
                        android:background="@drawable/txt_bg"
                        android:gravity="center"
                        android:hint="Paste link here"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/downloadBtn"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_37sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/download"
                        android:gravity="center"
                        android:text="Download"
                        android:textStyle="bold"
                        android:textColor="@color/download_btn_text_color"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@drawable/main_bg_home"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_above="@+id/banner_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How To Use?"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/help_text_color"
                    android:layout_margin="@dimen/_10sdp"/>

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <include layout="@layout/lay_adptive_banner_ad" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/help_bg_color"
                            app:cardCornerRadius="@dimen/_15sdp"
                            app:cardElevation="3dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_10sdp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/help1"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_100sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        tools:src="@drawable/chingari0" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/textView1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/step_1"
                                            android:textColor="@color/help_text_color"
                                            android:textSize="@dimen/_16sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/_20sdp"
                                        android:text="First click on Chingari button and open Chingari App."
                                        android:textColor="@color/help_text_color"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/help2"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_180sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        tools:src="@drawable/chingari1" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/step_2"
                                            android:textColor="@color/help_text_color"
                                            android:textSize="@dimen/_16sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/_20sdp"
                                        android:text="Click on the More button icon on Chingari video."
                                        android:textColor="@color/help_text_color"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/help3"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_180sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        tools:src="@drawable/chingari2" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/step_3"
                                            android:textColor="@color/help_text_color"
                                            android:textSize="@dimen/_16sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/_20sdp"
                                        android:text="Click on 'Share Link' option."
                                        android:textColor="@color/help_text_color"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/help4"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_180sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        tools:src="@drawable/chingari3" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="@string/step_4"
                                            android:textColor="@color/help_text_color"
                                            android:textSize="@dimen/_16sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/_20sdp"
                                        android:text="Click on 'Copy Link' option."
                                        android:textColor="@color/help_text_color"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/help5"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_80sdp"
                                        android:layout_marginTop="@dimen/_20sdp"
                                        android:layout_marginBottom="@dimen/_20sdp"
                                        tools:src="@drawable/intro04" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Step 5"
                                            android:textColor="@color/help_text_color"
                                            android:textSize="@dimen/_16sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/textView8"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/_20sdp"
                                        android:text="Paste link and tap on Download button. Video download automatically and video will be saved to your device. You can see all downloaded media on this app's Gallery."
                                        android:textColor="@color/help_text_color"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
            <include layout="@layout/lay_banner_ad" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>