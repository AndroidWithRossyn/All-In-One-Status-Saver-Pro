            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How To Use?"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/help_text_color" />
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <include layout="@layout/lay_adptive_banner_ad" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        fab:cardBackgroundColor="@color/help_bg_color"
                        fab:cardCornerRadius="@dimen/_15sdp"
                        fab:cardElevation="3dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Step 1"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/help_text_color"/>
                                <ImageView
                                    android:id="@+id/help1"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_150sdp"
                                    tools:src="@drawable/facebook_step1"/>
                                <TextView
                                    android:id="@+id/txt2"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Open this app and login with your facebook account."
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/help_text_color"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Step 2"
                                    android:gravity="center"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/help_text_color"/>
                                <ImageView
                                    android:id="@+id/help2"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_150sdp"
                                    tools:src="@drawable/facebook_step2"/>
                                <TextView
                                    android:id="@+id/txt4"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Click on facebook video which you want to download then press on download option for download the video."
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/help_text_color"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txt5"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Step 3"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/help_text_color"
                                    android:textStyle="bold"/>
                                <ImageView
                                    android:id="@+id/help3"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_180sdp"
                                    tools:src="@drawable/facebook_step3"/>
                                <TextView
                                    android:id="@+id/txt6"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Download video automatically and video will be saved to your device. You can see all downloaded media on this app's Gallery."
                                    android:textSize="@dimen/_11sdp"
                                    android:textColor="@color/help_text_color"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>